@import "mixins"
@import "sprite"

.sections-header {
	font-family "Droid Serif"
	font-size 60px
	margin-top 0px
	color #c55842
	font-style italic
	text-align center
	margin-bottom 12px
}

.sections-header--form {
	color white
	
}

.sections-header__logo {
	sprite($s-line-food)
	margin auto
	text-align center
	font-family "Montserrat"
	line-height 10px
	font-size 16px
	text-transform uppercase
	font-weight bold
	color #918686
	margin-bottom 33px
}

.sections-header__logo--form {
	color white
}