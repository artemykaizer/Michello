@import "sprite"
@import "mixins"

.reservation {
	background-color #b2b2b2
	padding-top 85px
	padding-bottom 85px
	position relative
}

.reservation:before{
  content: '';
  position absolute;
	left 0;
  width 100%;
  height 10px;
  z-index 1;
  background-size 15px 15px;
  background-repeat repeat-x;
  height 15px;
	bottom -10px;
  background-image: linear-gradient(40deg, transparent 10px, #b2b2b2 11px), linear-gradient(320deg, transparent 10px, #b2b2b2 11px);
}


.reservation__form {
	display flex
	flex-direction column
	margin-right 30px
}

.reservation__input-label{
	font-size 26px
	color white
	font-family "Droid Serif"
	font-style italic
}

.reservation__input {
	width 470px
	background none
	border none
	border-bottom 1px solid #c7c9c9
	font-size 16px
	font-family "Montserrat"
	padding-top 30px
	padding-bottom 14px
	padding-left 13px
	padding-right 13px
	font-style bold
	color white
}

.reservation__main-form	{
	display flex
}

.reservation__form__wrapper {
	display flex
}

.reservation__input:focus {
	border-bottom 3px solid white
}

.reservation__input--textarea {
	width 1000px
	resize none
	height 140px
}

.reservation__send-button {
	display block
	margin auto
	font-family "Montserrat"
	font-size 14px
	font-weight bold
	color white
	background transparent
	margin-top 60px
	padding-bottom 16px
	padding-top 14px
	border 1px solid white
	border-radius 2px
	padding-left 44px
	padding-right 18px
	position relative
	cursor pointer
}

.reservation__send-button::after {
	content: " "
	display block
	sprite($s-reservation-icon)
	position absolute
	left 16px
	top 15px
}
